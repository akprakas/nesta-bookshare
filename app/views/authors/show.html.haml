- content_for :head do
  = auto_discovery_link_tag :rss, { :controller => :authors, :action => :show, :format => :rss }, { :title => "Books by #{@author.name} on Sutton Bookshare" }

%h1
  = link_to (image_tag 'rss.png'),  :controller => :authors, :action => :show, :format => :rss
  = @page_title = @author.name

- if @author.titles.count > 0  
  %p
    = pluralize(@author.titles.count, "book")
    by this author:

  %table    
    - for title in @author.titles
      %tr
        %td= link_to(image_tag(title.image_url), title_path(title))
        %td
          %span.book_list_title
            = link_to title.title, title_path(title)
          - unless title.subtitle.nil?
            %br
            = title.subtitle
            